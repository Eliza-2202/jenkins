pipeline {
    agent any 

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Eliza-2202/jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def image = docker.build("nombre_imagen:tag")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("nombre_imagen:tag").run("-p 8000:8000")
                }
            }
        }
    }

    post {
        always {
            sh 'docker system prune -f'
        }
    }
}


