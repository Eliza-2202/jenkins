pipeline {
    agent any

    stages {
        stage('Construir Docker') {
            steps {
                script {
                    docker.build('nombre-imagen-apache', '.')
                }
            }
        }
        stage('Desplegar') {
            steps {
                script {
                    sh 'docker run -d -p 80:80 nombre-imagen-apache'
                }
            }
        }
    }
}

