pipeline {
    agent any

    stages {
        stage('Construir Imagen') {
            steps {
                script {
                    def image = docker.build("mi_imagen_local", "-f jenkins_apache/Dockerfile .")
                }
            }
        }

        stage('Ejecutar Contenedor') {
            steps {
                script {
                    docker.image("mi_imagen_local").run("-p 8080:80")
                }
            }
        }
    }
}

