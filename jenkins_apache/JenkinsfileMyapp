pipeline {
    agent any

    stages {
        stage('Clonar Repositorio') {
            steps {
                // Reemplaza con la URL de tu repositorio
                git 'https://tu-repositorio.git'
            }
        }
        stage('Construir Imagen Docker') {
            steps {
                script {
                    // Construir la imagen de Apache
                    //docker.build('mi_imagen', '-f docker/Dockerfile .')
                    sh "docker build -t mi_imagen -f jenkins_apache/Dockerfile jenkins_apache/"
                }
            }
        }
        stage('Desplegar en Contenedor') {
            steps {
                script {
                    // Ejecutar el contenedor de Apache
                    sh 'docker run -d -p 80:80 mi_imagen'
                }
            }
        }
    }
}

