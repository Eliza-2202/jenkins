pipeline {
    agent any 

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Eliza-2202/jenkins.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    sh 'docker build -t jenkins_apache/Dockerfile .'
                }
            }
        }
        stage('Run') {
            steps {
                script {
                    sh 'docker-compose up -d'
                }
            }
        }
    }

    post {
        always {
            cleanup {
                sh 'docker-compose down'
            }
        }
    }
}

