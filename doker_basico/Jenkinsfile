pipeline {
    agent { dockerfile true } 
    stages {
        stage('Test') {
            steps {
                echo 'Hola Mundo, holisssssssssss'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t eliza22/fastapi-app .'
            }
        }
        stage('Docker Run') {
            steps {
                sh 'docker run --name test -d eliza22/fastapi-app .'
            }
        }
    }
}

