pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "123-app:latest"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                dir('jenkindocker_File_parte2') {  // Cambiar al directorio correcto
                    script {
                        // Construir la imagen Docker
                        sh 'docker build -t $DOCKER_IMAGE .'
                    }
                }
            }
        }

        stage('Deploy to Minikube') {
            steps {
                dir('jenkindocker_File_parte2') {  // Cambiar al directorio correcto
                    script {
                        // Cargar imagen en Minikube
                        sh 'eval $(minikube -p minikube docker-env)'
                        // No es necesario construir nuevamente la imagen si ya lo hiciste en la etapa anterior
                        // Aplica la configuración de Kubernetes
                        sh 'kubectl apply -f deployment.yml'
                    }
                }
            }
        }

        stage('Check Application') {
            steps {
                script {
                    // Obtener el puerto donde se expone la aplicación
                    sh 'minikube service fastapi-service --url'
                }
            }
        }
    }

    post {
        always {
            dir('jenkindocker_File_parte2') {  // Asegurarse de estar en el directorio correcto para la limpieza
                sh 'kubectl delete -f deployment.yml || true'
            }
        }
    }
}
