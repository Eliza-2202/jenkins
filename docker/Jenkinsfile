pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Eliza-2202/jenkins.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('nombre-imagen-local', './')
                }
            }
        }
        stage('Deploy with Docker Compose') {
            steps {
                script {
                    sh 'docker-compose up -d'
                }
            }
        }
    }
}

