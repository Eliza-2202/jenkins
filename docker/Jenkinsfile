pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://tu-repositorio-url.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('nombre-imagen-local', '.')
                }
            }
        }
        stage('Deploy with Docker Compose') {
            steps {
                script {
                    sh 'docker-compose up -d'
                }
            }
        }
    }
}

