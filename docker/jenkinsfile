pipeline {
    agent any 

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Eliza-2202/jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Cambia 'nombre_imagen:tag' por el nombre de imagen que desees
                    def image = docker.build("nombre_imagen:tag", "-f Dockerfile .")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Ejecuta el contenedor basado en la imagen construida
                    docker.image("nombre_imagen:tag").run("-p 8000:8000")
                }
            }
        }
    }

    post {
        always {
            // Limpieza opcional
            sh 'docker system prune -f'
        }
    }
}

